<%- include("header"); -%>
<div class="card-header"><h3 class="text-center font-weight-dark my-4">Update Profile</h3></div>
<div class="card-body">

<form action="/profile" method="POST" enctype="multipart/form-data" onsubmit="return confirm('Do you really want to Save Changes?');">
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="form-floating mb-3 mb-md-0">
                <input class="form-control" name="inputFirstName" value="<%=user.firstName%>" type="text" placeholder="Enter your first name" required/>
                <label for="inputFirstName">First name</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating">
                <input class="form-control" name="inputLastName" value="<%=user.lastName%>" type="text" placeholder="Enter your last name" required/>
                <label for="inputLastName">Last name</label>
            </div>
        </div>
    </div>
    <div class="form-floating mb-3">
        <input class="form-control" name="inputAddress" value="<%=user.address%>" type="text" placeholder="Enter your Address" required/>
        <label for="inputAddress">Address</label>
    </div>
    <div class="form-floating mb-3">
        <input class="form-control" name="inputNumber" value="<%=user.phoneNumber%>" type="tel" placeholder="Phone Number" required minlength="10" maxlength="10" pattern="[0-9]{2}[0-9]{3}[0-9]{5}"/>
        <label for="inputNumber">Phone Number</label>
        <small style="margin-left: 0.2rem;">Format: 1234567890</small>
    </div>
    <div class="form-floating mb-3">
        <input class="form-control" name="inputOccupation" value="<%=user.occupation%>" type="tel" placeholder="Occupation" required />
        <label for="inputOccupation">Occupation</label>
    </div>
    <input type="hidden" name="postId" value="<%= user._id %>"/>
          <div>
            <input class="form-control additional" type="file" name="myImage" />
          </div>
          <div>
            <img src="/images/<%= user.imageProfile %>" alt="" style="width: 6.25rem;" onerror="this.src='/usedImages/defaultProfile.png'">
          </div>
   
    <div class="row d-flex justify-content-center mb-2 mt-4 mb-0">
            <div class="col-md-6 d-grid mt-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
            <div class="col-md-6 d-grid mt-2">
                <a href="/authUser/dashboard" class="btn btn-outline-primary">Cancel</a>
            </div>
      </div>
</form>
</div>
<%- include("footer"); -%>