<%- include("user/header"); -%>

        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-dark my-4">Verify Email</h3></div>
                                    <div class="card-body">
                                        <!-- form start -->
                                        <form action="/registerOTP" method="post">
                                            <div class="form-outline mb-4">
                                                <input required
                                                  style="margin-left: 0%"
                                                  type="text"
                                                  id="form2Example11"
                                                  class="form-control"
                                                  placeholder="Your OTP"
                                                  name="inputOTP"
                                                />
                                                <input hidden name="sentOTP" value="<%= otp %>" >
                                                <input hidden name="firstName" value="<%= usernew[0].firstName %>">
                                                <input hidden name="lastName" value="<%= usernew[0].lastName %>">
                                                <input hidden name="email" value="<%= usernew[0].email %>">
                                                <input hidden name="password" value="<%= usernew[0].password %>">
                                                <input hidden name="phoneNumber" value="<%= usernew[0].phoneNumber %>">
                                                <input hidden name="address" value="<%= usernew[0].address %>">
                                                
                                                <input hidden name="occupation" value="<%= usernew[0].occupation %>">
                            
                            
                                              </div>
                                           
                                           
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <!-- <a class="small" href="password.html">Forgot Password?</a> -->
                                                <button style="margin:auto;" type="submit" class="btn btn-primary">Verify</button>
                                            </div>
                                        </form>
                                        <!-- form end -->
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="/register">Wrong Email? Want to Change?</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-dark mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2023</div>
                            <div>
                                <a href="https://twitter.com/"><img style="width:2rem;" src="/usedImages/twitter.png" alt="twitter"></a>
                                &middot;
                                <a href="https://www.facebook.com/"><img style="width:2rem;" src="/usedImages/facebook.png" alt="facebook"></a>
                                &middot;
                                <a href="https://www.instagram.com/"><img style="width:2rem;" src="/usedImages/instagram.png" alt="facebook"></a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
       
