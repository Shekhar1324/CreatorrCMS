<%- include("user/header"); -%>


<% if(messages.length>0){%>
    <div class="alert alert-danger alert-dismissible fade show my-0">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <button type="button" class="close" data-bs-dismiss="alert">x</button>
        <%= messages %>
    </div>
<%}%>
  
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-dark my-4">Login</h3></div>
                                    <div class="card-body">
                                        <!-- form start -->
                                        <form action="/login" method="POST">
                                            <div class="form-floating mb-3">
                                                <input class="form-control" name="inputEmail" type="email" placeholder="name@example.com" required/>
                                                <label for="inputEmail">Email address</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" name="inputPassword" id="myInput" type="password" placeholder="Password" required/>
                                                <label for="inputPassword">Password</label>
                                                
                                            </div>
                                            <div lass="form-floating mb-3 form-control">
                                                <div class="row">
                                                    <div class="col-6">
                                                        <input type="checkbox" onclick="myFunction()"> Show Password
                                                    </div>
                                                    <div class="col-6" style="text-align: end;">
                                                        <div ><a href="/resetPass">Forgot Password?</a></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <button style="margin:auto;" type="submit" class="btn btn-primary">Log In</button>
                                            </div>
                                        </form>
                                        <!-- form end -->
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="/register">Need an account? Sign up!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-dark mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2023</div>
                            <div>
                                <a href="https://twitter.com/"><img style="width:2rem;" src="/usedImages/twitter.png" alt="twitter"></a>
                                &middot;
                                <a href="https://www.facebook.com/"><img style="width:2rem;" src="/usedImages/facebook.png" alt="facebook"></a>
                                &middot;
                                <a href="https://www.instagram.com/"><img style="width:2rem;" src="/usedImages/instagram.png" alt="facebook"></a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
        <script>
            function myFunction() {
              var x = document.getElementById("myInput");
              if (x.type === "password") {
                x.type = "text";
              } else {
                x.type = "password";
              }
            }
            </script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
